<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h1>All our Flats</h1>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <p>All (<%= @flats.count %>) flats</p>
    </div>
  </div>

  <div class="row">
    <% @flats.each do |flat| %>
    <div class="col-4">
      <div class="flat-card my-3 shadow">
          <img class="card-img-top" src="https://images.unsplash.com/photo-1493809842364-78817add7ffb?w=1200" alt="Card image cap">
          <div class="flat-card-content bg-light p-3">
            <div class="flat-card-title">
              <h4 class="card-title"><%= flat.name %></h4>
            </div>
            <p class="card-text"><%= flat.address %></p>
            <div class="d-flex flex-row font-weight-bold">
              <div>
                <i class="justify-content fas fa-user-friends mr-3"></i><span><%= flat.number_of_guests %></span>
              </div>
              <div class="justify-content ml-4">
                <i class="fas fa-euro-sign mr-3"></i><%= flat.price_per_night %>
              </div>
            </div>
          </div>
          <div class="flat-card-actions p-4 bg-white">
              <%= link_to 'More Info', flat_path(flat) %>
              <a class="ml-3 text-warning" href="/flats/2551/edit">Edit</a>
              <a data-confirm="Are you sure?" class="ml-3 text-danger" rel="nofollow" data-method="delete" href="/flats/2551">Remove</a>
          </div>
      </div>
    </div>
    <% end %>
  <div>
</div>
<br>
<br>
<br>
<br>
